    title: 'Mentor',
    organization: {
      name: 'adplist.org',
      link: 'https://www.adplist.org/mentors/alec-danz'
    },
    duration: '2021 - Present',
    details: 'Mentored designer on the Amazing Design People list, giving back to the design community.'
  },
