---
export interface Props {
  activeLink: "home" | "work" | "writing" | "about";
}
const { activeLink } = Astro.props;
---

<nav id="TopBar">
  <ul>
    <li>
      <a href="/" class:list={["home", { active: activeLink === "home" }]}
        >Home</a
      >
    </li>
    <li>
      <a href="/work" class:list={["work", { active: activeLink === "work" }]}
        >Work</a
      >
    </li>
    <li>
      <a
        href="/writing"
        class:list={["writing", { active: activeLink === "writing" }]}
        >Writing</a
      >
    </li>
    <li>
      <a
        href="/about"
        class:list={["about", { active: activeLink === "about" }]}>About</a
      >
    </li>
  </ul>
</nav>

<style>
  nav {
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;

    font-size: 24px;
    font-weight: 700;
    color: #22252d;
  }

  ul {
    width: 100%;
    padding: 40px 40px 0;
    display: flex;
    justify-content: start;
    align-items: center;
    list-style: none;
    gap: 80px;
  }
</style><style is:global>
  #TopBar a {
    display: flex;
    align-items: center;
    position: relative;
    text-decoration: none;
  }

  #TopBar a:visited {
    color: currentColor;
  }

  #TopBar a::before {
    --circle-size: 24px;

    content: "";
    display: none;
    width: var(--circle-size);
    height: var(--circle-size);
    border-radius: calc(var(--circle-size) / 2);
    position: absolute;
    left: calc(calc(var(--circle-size) * -1) - 8px);
  }

  #TopBar .active::before {
    display: block;
  }

  #TopBar .home::before {
    background: #ff7a00;
  }
  #TopBar .work::before {
    background: #ff00e5;
  }
  #TopBar .writing::before {
    background: #ffe500;
  }
  #TopBar .about::before {
    background: #00f0ff;
  }
</style>
