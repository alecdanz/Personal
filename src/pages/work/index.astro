---

<DefaultLayout  activeLink="work">
  <SEO
    slot="seo"
    title="Alec Danz | Work"
    description="My select work, resume, and volunteer experience"
    openGraph={{
      basic: {
        title: "Work",
        type: "website",
        image: `${Astro.site}share-image.png`,
      },
      optional: {
        description: "My select work, resume, and volunteer experience",
        siteName: "Alec Danz"
      },
      image: {
        alt: "Alec Danz, the designer of this website, and creator of its content, in portrait",
      },
    }}
  />

  <main class="max-w-screen-lg mx-auto">
    <div class="max-w-[716px]">
      <section class="mb-40">
        <h2
          class="text-regular font-bold pb-6 border-b-[1px] border-cream dark:border-overcast mb-6"
        >
          Select Work
        </h2>
        {selectWorks.map(({thumbnail, title, duration, details, link}) => (
          <a href={link} class="group no-underline hover:text-inherit dark:hover:text-inherit">
            <article class="flex flex-col lg:flex-row lg:items-start lg:space-x-6 mb-10">
              <img src={thumbnail} width="96" height="96" class="w-24 h-24 bg-placeholder-gray rounded-lg mb-[6px]" />
              <div class="w-full">
                <header class="flex flex-col lg:flex-row lg:justify-between mb-[6px]">
                  <h3 class="text-medium font-semibold text-night dark:text-clear group-hover:text-cloudy-white dark:group-hover:text-cloudy group-hover:underline">{title}</h3>
                  <span class="text-paragraph text-cloudy-white dark:text-cloudy">{duration}</span>
                </header>
                <p class="mb-[6px]">{details}</p>
              </div>
            </article>
          </a>
        ))}
      </section>
      <section class="mb-40">
        <h2
          class="text-regular font-bold pb-6 border-b-[1px] border-cream dark:border-overcast mb-6"
        >
          Resume
        </h2>
        {resume.map(({title, organization, duration, details}) => (
          <article class="mb-10">
            <header class="flex flex-col lg:flex-row lg:justify-between mb-[6px]">
              <h3 class="font-semibold text-medium text-night dark:text-clear">{title} • <a href={organization.link}>{organization.name}</a></h3>
              <span class="text-paragraph text-cloudy-white dark:text-cloudy">{duration}</span>
            </header>
            <p>{details}</p>
          </article>
        ))}
      </section>
      <section class="mb-40">
        <h2
          class="text-regular font-bold pb-6 border-b-[1px] border-cream dark:border-overcast mb-6"
        >
          Volunteer Experience
        </h2>
        {volunteerExperience.map(({title, organization, duration, details}) => (
          <article class="mb-10">
            <header class="flex flex-col lg:flex-row lg:justify-between mb-[6px]">
              <h3 class="text-medium font-semibold text-night dark:text-clear">{title} • <a href={organization.link}>{organization.name}</a></h3>
              <span class="text-paragraph text-cloudy-white dark:text-cloudy">{duration}</span>
            </header>
            <p>{details}</p>
          </article>
        ))}
      </section>
    </div>
  </main>
</DefaultLayout>
