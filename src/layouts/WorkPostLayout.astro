---
import { SEO } from "astro-seo";
import DefaultLayout from "./DefaultLayout.astro";
import BasePostLayout from "./BasePostLayout.astro";

export interface Content {
  title: string;
  description: string;
}
const { content } = Astro.props as { content: Content };
---

<DefaultLayout>
  <SEO
    slot="seo"
    title={`Alec Danz | ${content.title}`}
    description={content.description}
    openGraph={{
      basic: {
        title: content.title,
        type: "article",
        image: `${Astro.site}share-image.png`,
      },
      optional: {
        description: content.description,
        siteName: "Alec Danz",
      },
      image: {
        alt: "Alec Danz, the designer of this website, and creator of its content, in portrait",
      },
    }}
  />

  <BasePostLayout>
    <slot />
  </BasePostLayout>
</DefaultLayout>
