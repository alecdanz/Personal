---
import TopBar from "@/components/TopBar.astro";

export interface Props {
  title: string;
  activeLink: "home" | "work" | "writing" | "about";
}
const { title, activeLink } = Astro.props as Props;
---

<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{`Alec Danz | ${title}`}</title>
  </head>
  <body
    class="bg-clear dark:bg-night text-['Inter',sans-serif] text-night dark:text-clear text-paragraph font-normal px-6 pb-20 lg:px-[172px]"
  >
    <header class="mb-36 relative">
      <TopBar {activeLink} />
    </header>
    <slot />
  </body>
</html>
